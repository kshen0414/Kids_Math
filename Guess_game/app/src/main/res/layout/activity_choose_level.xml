<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choose_level"
    android:orientation="vertical"
    android:background="#FBF4E7"

    android:gravity="center
"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_pg2"
        android:fontFamily="@font/nordic_light"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="-80dp"
        />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nordic_light"
        android:text="Compare Number"
        android:background="@drawable/button_background"
        android:textSize="20dp"
        android:textStyle="italic"
        android:onClick="onSelectLevel"
        />

    <Button
        android:id="@+id/leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/nordic_light"
        android:text="Ordering number"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nordic_light"
        android:text="Composing Number"
        android:background="@drawable/button_background"
        android:textSize="20dp"
        android:textStyle="italic" />

</LinearLayout>